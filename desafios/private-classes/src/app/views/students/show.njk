{% extends "layout.njk" %}

{% block content %}
<div class="card">
    <section class="avatar" style="
    border-bottom-left-radius: 3px;
    border-top-left-radius: 3px;
    background: url({{student.avatar_url}}) no-repeat center center / cover">
    </section>
    <section class="details">
        <h3>detalhes do aluno</h3>

        <div class="item">
            <div>Nome</div>
            <div>{{student.name}}</div>
        </div>

        <div class="item">
            <div>Email</div>
            <div>{{student.email}}</div>
        </div>

        <div class="item">
            <div>Aniversário</div>
            <div>{{student.birth_date}}</div>
        </div>

        <div class="item">
            <div>Cursando</div>
            <div>{{student.education_level}}</div>          
        </div>

        <div class="item">
            <div>Carga horária semanal</div>
            <div>{{student.workload}}</div>          
        </div>

        <input type="hidden" name="id" value={{student.id}}>

        <a href="{{student.id}}/edit" class="button" id="toStudentEdit">Editar</a>
    </section>
</div>
    
{% endblock content %}