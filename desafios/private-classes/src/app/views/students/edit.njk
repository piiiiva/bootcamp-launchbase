{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatar" style="
        border-bottom-left-radius: 3px;
        border-top-left-radius: 3px;
        background: url({{student.avatar_url}}) no-repeat center center / cover">
    </section>

    <section class="details">
        <form  id="students" method="POST" action="/students/{{student.id}}?_method=PUT">
                <h3>Editar Aluno</h3>

                {% include 'students/_fieldsForm.njk' %}

        </form>

        <form id="form-delete" action="/students?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{student.id}}>
            <button type="submit">Deletar</button>
        </form>
    </section>
</div>

<script src="/confirmDelete.js"></script>
    
{% endblock content %}