<div class="item">
    <div>Imagem</div>
    <input 
    type="url" 
    name="avatar_url" 
    value="{{ teacher.avatar_url }}"
    placeholder="Insira o link de uma imagem - http://"
    >
</div>

<div class="item">
    <div>Nome</div>
    <input 
    type="text" 
    name="name"
    value="{{ teacher.name }}" 
    placeholder="Nome Completo"
    >
</div>

<div class="item">
    <div>Data de nascimento</div>
    <input 
    type="date" 
    name="birth_date"
    value="{{ teacher.birth_date }}"
    >
</div>

<div class="item">
    <div>Grau de escolaridade</div>
    <div>
        <select name="education_level" form="teachers" required>
            <option value="medio"
            {% if teacher.education_level == "medio" %}
                selected
            {% endif %}
            >Ensino Médio</option>
            <option value="tecnico"
            {% if teacher.education_level == "tecnico" %}
                selected
            {% endif %}
            >Curso Técnico</option>
            <option value="bacharelado"
            {% if teacher.education_level == "bacharelado" %}
                selected
            {% endif %}
            >Graduação</option>
            <option value="especializacao"
            {% if teacher.education_level == "especializacao" %}
                selected
            {% endif %}
            >Especialização</option>
            <option value="mestrado"
            {% if teacher.education_level == "mestrado" %}
                selected
            {% endif %}
            >Mestrado</option>
            <option value="doutorado"
            {% if teacher.education_level == "doutorado" %}
                selected
            {% endif %}
            >Doutorado</option>

        </select>
    </div>
    
</div>

<div class="item">
    <div>Tipo de aula</div>
    <div>
        <span>
            <input 
            type="radio" 
            name="class_type" 
            value="Local"
            {% if teacher.class_type == "Local" %}
                checked
            {% endif %}
            > Presencial         
        </span>

        <span>
            <input 
            type="radio" 
            name="class_type" 
            value="Distance"
            {% if teacher.class_type == "Distance" %}
                checked
            {% endif %}
            >À distância         
        </span>
        

    </div>
</div>

<div class="item">
    <div>Área de Atuação</div>
    <input 
    type="text" 
    name="subject_taught" 
    value="{{ teacher.subject_taught }}"
    placeholder="Disciplinas separadas por vírgula">
</div>

<button type="submit">Salvar</button>