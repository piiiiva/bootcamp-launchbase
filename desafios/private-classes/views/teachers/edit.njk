{% extends "layout.njk" %}

{% block content %}

<div class="card">
    <section class="avatar" style="
        border-bottom-left-radius: 3px;
        border-top-left-radius: 3px;
        background: url(https://source.unsplash.com/collection/1960772/800x800) no-repeat center center / cover">
    </section>

    <section class="details">
        <form  id="teachers" method="POST" action="/teachers/{{teacher.id}}?_method=PUT">
                <h3>Editar Pofessor</h3>

                {% include 'teachers/_fieldsForm.njk' %}

        </form>

        <form id="form-delete" action="/teachers?_method=DELETE" method="post">
            <input type="hidden" name="id" value={{teacher.id}}>
            <button type="submit">Deletar</button>
        </form>
    </section>
</div>


    
{% endblock content %}